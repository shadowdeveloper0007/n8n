# Production Environment Variables for n8n on Render
# Using your actual PostgreSQL database credentials

# ===========================================
# REQUIRED: Basic Configuration
# ===========================================

NODE_ENV=production
N8N_HOST=0.0.0.0
N8N_PORT=3000
N8N_PROTOCOL=https

# ===========================================
# REQUIRED: Security Configuration
# ===========================================

# Basic Authentication (REQUIRED - generate secure values)
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_secure_password_here

# Encryption key for sensitive data (REQUIRED - generate a random 32-character string)
N8N_ENCRYPTION_KEY=your_32_character_encryption_key_here

# ===========================================
# REQUIRED: Database Configuration (Your PostgreSQL)
# ===========================================

DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=dpg-d3glauvdiees73d7vadg-a.oregon-postgres.render.com
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n_t4jt
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=Z5Qro7d3h3USCCQ75iR05H5rVfMC58ZN

# ===========================================
# REQUIRED: Webhook Configuration
# ===========================================

# Webhook URL (replace with your actual Render app URL)
WEBHOOK_URL=https://your-n8n-app.onrender.com
N8N_EDITOR_BASE_URL=https://your-n8n-app.onrender.com

# ===========================================
# OPTIONAL: Additional Configuration
# ===========================================

N8N_DEFAULT_LOCALE=en
GENERIC_TIMEZONE=UTC
N8N_DISABLE_UI=false
N8N_METRICS=false
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console

# Data persistence
N8N_USER_FOLDER=/opt/render/project/src/.n8n

